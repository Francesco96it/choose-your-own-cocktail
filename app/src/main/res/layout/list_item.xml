<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/img_preview"
        android:layout_width="@dimen/imgview_size"
        android:layout_height="@dimen/imgview_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:alpha="1.0"/>

    <TextView
        android:id="@+id/beerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/nome_birra"
        android:textAppearance="@style/detail_beerName"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/img_preview"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/beer_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_33_cl"
        android:textAppearance="@style/detail_cl"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toEndOf="@+id/img_preview"
        app:layout_constraintTop_toBottomOf="@+id/beerName"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
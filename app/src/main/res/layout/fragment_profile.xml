<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragmentprofileImageview_height"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/fragmentprofileImageview_marginStart"
        android:layout_marginTop="@dimen/fragmentprofileImageview_marginTop"
        android:layout_marginEnd="@dimen/fragmentprofileImageview_marginEnd"
        android:layout_marginBottom="@dimen/fragmentprofileImageview_marginBottom"
        android:contentDescription="@android:string/yes"
        android:background="@color/black"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toTopOf="@+id/text_version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textversion_height"
        android:layout_marginStart="@dimen/textversion_marginStart"
        android:layout_marginTop="@dimen/textversion_marginTop"
        android:layout_marginEnd="@dimen/textversion_marginEnd"
        android:text="@string/app_version"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@dimen/textversion_horizontalBias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/contact_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/contactUs_height"
        android:layout_marginStart="@dimen/contactUs_marginStart"
        android:layout_marginTop="@dimen/contactUs_marginTop"
        android:layout_marginEnd="@dimen/contactUs_marginEnd"
        android:text="@string/contactus"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/log_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings" />

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/settings_marginStart"
        android:layout_marginEnd="@dimen/setting_marginEnd"
        android:layout_marginBottom="@dimen/setting_marginBottom"
        android:text="@string/settings"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/contact_us"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_version"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <Button
        android:id="@+id/log_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logout_height"
        android:layout_marginStart="@dimen/logout_marginStart"
        android:layout_marginTop="@dimen/contactUs_marginTop"
        android:layout_marginEnd="@dimen/contactUs_marginEnd"
        android:text="@string/log_out"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_us" />
</androidx.constraintlayout.widget.ConstraintLayout>